<h1>New game</h1>

<ul>
  <% @letters.each do |char| %>
    <li>
      <%= char %>
    </li>
  <% end %>

  <form action="score" method="POST">
    <%= hidden_field_tag :authenticity_token , form_authenticity_token %>

    <label for="">
      Whats is the longest word you can find?
    </label>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="writtenWord" id="">
    <br>
    <input type="submit" name="" id="" value="send">
  </form>

</ul>